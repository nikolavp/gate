<!ENTITY % m.token  'phr | w | m | c | cl '                     >

<!--                  Global attributes                       -->
<!ENTITY % a.ana  '
          id                 ID                  #IMPLIED
          n                  CDATA               #IMPLIED
          lang               IDREF               #IMPLIED
          type               CDATA               #IMPLIED
          wsd                CDATA               #IMPLIED'      >

<!ELEMENT cl           (%phrase.seq;)                     >
<!ATTLIST cl           %a.ana;                            >


<!ELEMENT phr          (%phrase.seq;)                     >
<!ATTLIST phr          %a.ana;                            >


<!ELEMENT w            (#PCDATA | w | m | c )*            >
<!ATTLIST w            %a.ana;
          ctag         CDATA               #IMPLIED
          base         CDATA               #IMPLIED       >

<!ELEMENT m            (#PCDATA | c)*                     >
<!ATTLIST m            %a.ana;                            >

<!ELEMENT c            (#PCDATA)                          >
<!ATTLIST c            %a.ana;                            >

