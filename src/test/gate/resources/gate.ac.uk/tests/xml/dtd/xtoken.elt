      $Date$
      $Revision$
                                                              -->
<!--                                                          -->

<!ENTITY % m.token  'tok |'                                     >

<!--                  Global attributes                       -->


<!ENTITY % a.ana  '
          id                 ID                  #IMPLIED
          n                  CDATA               #IMPLIED
          lang               IDREF               #IMPLIED
          type               CDATA               #IMPLIED       
          wsd                CDATA               #IMPLIED' >
 
<!ELEMENT tok           (orth, disamb*, lex*)              >
<!ATTLIST tok                %a.ana;
          class              CDATA               #IMPLIED  >

<!ELEMENT orth          (#PCDATA)                          >
<!ATTLIST orth               %a.ana;                       >

<!ELEMENT disamb        (ctag)+                            >
<!ATTLIST disamb             %a.ana;                       >

<!ELEMENT lex           (base, msd?, ctag)                 >
<!ATTLIST lex                %a.ana;                       >

<!ELEMENT base          (#PCDATA)                          >
<!ATTLIST base               %a.ana;                       >

<!ELEMENT msd           (#PCDATA)                          >
<!ATTLIST msd                %a.ana;                       >

<!ELEMENT ctag          (#PCDATA)                          >
<!ATTLIST ctag          %a.ana;                            
          certainty     CDATA               #IMPLIED       >

